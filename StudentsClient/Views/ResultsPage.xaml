<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentsClient.Views.ResultsPage"
             Title="ResultsPage">
    
    <VerticalStackLayout>
        <Label 
            Text="Тест завершен"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="36"/>
        <Label 
            Text="Ваш результат"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="24"/>
        <Label 
            Text="{Binding ScoreResult}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="24"/>
    </VerticalStackLayout>
</ContentPage>