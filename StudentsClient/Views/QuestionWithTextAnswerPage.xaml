<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:StudentsClient.ViewModels"
             x:Class="StudentsClient.Pages.QuestionWithTextAnswerPage"
             Title="{Binding QuestionNumber}">

    <VerticalStackLayout>
        <Label 
            Text="{Binding QuestionText}"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Ответ" Text="{Binding Answer}"></Entry>
        <Button Text="{Binding ButtonText}" Command="{Binding NextCommand}"></Button>
    </VerticalStackLayout>
</ContentPage>